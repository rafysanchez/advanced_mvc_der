<div id="modalConfirmaExclusao" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" onclick="ModalSistema(false, '#modalConfirmaExclusao')"><span aria-hidden="true">&times;</span></button>
                Confirmação
            </div>
            <div class="modal-body text-center">
                <span><i class="fa fa-warning text-warning"></i> Confirma exclusão deste ítem?</span>
            </div>
            <div class="modal-footer footer-modal">
                <button type="button" class="btn btn-sm btn-danger" onclick="ModalExclusaoEfetuada('#modalConfirmaExclusao')"><i class="fa fa-check"></i> Confirma</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="ModalSistema(false, '#modalConfirmaExclusao')"><i class="fa fa-close"></i> Cancelar</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<script>
    function ModalSistema(boolean, id) {
        $("html").css("overflow-y", boolean == true ? "hidden" : "scroll");
        $(id).modal(boolean == true ? 'show' : 'hide');
        return false;
    }
</script>