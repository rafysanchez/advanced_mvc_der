
@using System.Globalization
@using System.Linq

@model IList<Sids.Prodesp.UI.Areas.PagamentoContaUnica.Models.Desdobramento.DadoDesdobramentoCancelarGridViewModel>


<div>
    <div class="row">
        <div class="col-md-12">
            <h3 class="tituloItensPagina"></h3>
            <hr class="margT10" />
        </div>
    </div>

    <div class="margT0">

        <div class="row">
            <div class="col-sm-12 col-lg-12 col-md-12">
                <table id="tblPesquisaOutros" class="_tbDataTables table table-condensed table-striped small">
                    <thead>
                        <tr>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().Desdobramento)</th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().ReduzidoCredor)</th>
                            <th><label>Valor</label></th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().TipoBloqueio)</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@Html.DisplayFor(modelItem => item.Desdobramento)</td>
                                <td>@Html.DisplayFor(modelItem => item.ReduzidoCredor)</td>
                                <td>R$ @string.Format(CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", (Convert.ToDecimal(item.ValorDistribuicao)).ToString("N2"))</td>
                                <td>@Html.DisplayFor(modelItem => item.TipoBloqueio)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>