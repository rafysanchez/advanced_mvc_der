@using System.Globalization
@using System.Linq

@model IList<Sids.Prodesp.UI.Areas.PagamentoContaUnica.Models.Desdobramento.DadoDesdobramentoIdentificacaoViewModel>


@{

    var tipo = Request.QueryString["tipo"];
    var controller = ViewContext.RouteData.GetRequiredString("controller");
}

<div class="issqn">

    <div class="row">

        <div class="col-md-12">
            <h3 class="tituloItensPagina"></h3>
            <hr class="margT10" />
        </div>

    </div>

    <div class="margT0 siafisico">

        <div class="row">

            <div class="col-sm-12 col-lg-12 col-md-12 form-group-sm form-group has-feedback ">

                <table id="tblPesquisaIssqn" name="tblPesquisaIssqn" class="_tbDataTables table table-condensed table-striped small">
                    <thead>
                        <tr>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().Tipo)</th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().ReduzidoCredor)</th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().ValorDistribuicao)</th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().BaseCalc)</th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().ValorDesdobrado)</th>
                            <th>@Html.LabelFor(x => x.FirstOrDefault().ReterId)</th>
                            <th><label>Ações</label></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@Html.DisplayFor(modelItem => item.DesdobramentoTipo)</td>
                                <td>@Html.DisplayFor(modelItem => item.ReduzidoCredor)</td>
                                <td>R$ @string.Format(CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", (Convert.ToDecimal(item.ValorDistribuicao)).ToString("N2"))</td>
                                <td>@string.Format(CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", (Convert.ToDecimal(item.BaseCalc)).ToString("N2")) %</td>
                                <td>R$ @string.Format(CultureInfo.GetCultureInfo("pt-BR"), "{0:C}", (Convert.ToDecimal(item.ValorDesdobrado)).ToString("N2"))</td>
                                <td>@Html.DisplayFor(modelItem => item.ReterDescicao)</td>
                                <td>
                                    @if(!item.TransmitidoProdesp && tipo != "c")
                                    {
                                    <button type="button" title="Alterar" class="btn btn-xs btn-info margL7   btn-edit lockProdesp" onclick="desdobramentoList.editIssqn(this)"><i class="fa fa-edit"></i></button>
                                    <button type="button" title="Excluir" class="btn btn-xs btn-danger margL7  btn-trash lockProdesp" onclick="desdobramentoList.removeIssqn(this)"><i class="fa fa-trash"></i></button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>