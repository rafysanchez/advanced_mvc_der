@using Sids.Prodesp.UI.Areas.LiquidacaoDespesa.Models

@model PesquisaSaldoRapViewModel

@{
    var controller = ViewContext.RouteData.GetRequiredString("controller");
}

<div id="PesquisaSaldoRap">
    <div class="row">

        <div class="col-md-12">
            <h3 class="tituloItensPagina">Consultar Empenhos com Saldo para RAP</h3>
            <hr class="margT10" />
        </div>

    </div>


    <div class="row siafem">

        <div class="col-sm-12 col-lg-3 col-md-3 form-group-sm form-group has-feedback">
            @Html.LabelFor(model => model.AnoExercicio, new { @class = "control-label label-form-DER" })<span class='text-danger'></span>
            <div class="input-group-sm">
                @Html.TextBoxFor(model => model.AnoExercicio, new { @class = "form-control lockProdesp lockSiafem yearExPicker ano", @maxlength = "4" })
                @*@Html.DropDownListFor(model => model.AnoExercicio, Model.AnoExercicioListItens, "Selecione", new {@class = "form-control lockProdesp lockSiafem"})*@
            </div>
        </div>

        <div class="col-sm-12 col-lg-3 col-md-3 form-group-sm form-group has-feedback">
            @Html.LabelFor(model => model.Orgao, new { @class = "control-label label-form-DER" })<span class='text-danger'></span>
            <div class="input-group-sm">
                @Html.DropDownListFor(model => model.Orgao, Model.OrgaoListItens, "Selecione", new { @class = "form-control lockProdesp lockSiafem" })
            </div>
        </div>

        <div id="divbtnConsultar" class="col-sm-12 col-lg-2 col-md-2 form-group-sm form-group has-feedback">
            <label class="invisible">Consultar</label>
            <div class="input-group-sm">
                <button id="btnConsultar" type="button" class="btn btn-primary btn-sm" onclick="consultarEmpenhoSaldoRap()"><i class="fa fa-search"></i>  Consultar</button>
            </div>
        </div>
    </div>
</div>