@model List<Sids.Prodesp.UI.Areas.PagamentoContaDer.Models.ConfirmacaoPagamentoFiltroViewModel>
@{
    ViewBag.Title = "FiltroCadastro";
}

@Html.HiddenFor(model => model.FirstOrDefault().PesquisaRetorno, new { id = "PesquisaRetorno", name = "PesquisaRetorno" })


<div class="dadosBuscaPagamentosConfirmar">
        @Html.Hidden("transmitirNls", false)
