                                <div class="col-md-2 col-lg-2 form-group-sm" style="margin-top: 25px;">
                                    <button type='submit' id='btnPesquisar' class='btn-sm btn btn-primary'><i class='glyphicon glyphicon-search'></i> Consultar</button>
                                </div>
            </div>
        </div>
    </div>
</div>
    
